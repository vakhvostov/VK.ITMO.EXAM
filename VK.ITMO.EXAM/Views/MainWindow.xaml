<Window x:Class="VK.ITMO.EXAM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm ="clr-namespace:VK.ITMO.EXAM.ViewModels"
        xmlns:cmd ="clr-namespace:VK.ITMO.EXAM.Commands"
        xmlns:local="clr-namespace:VK.ITMO.EXAM"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <DataGrid DockPanel.Dock="Top" MaxHeight="360"/>
        <Grid DockPanel.Dock="Bottom" Height="50">
            <Button Content="Add" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Edit" HorizontalAlignment="Left" Margin="125,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Remove" HorizontalAlignment="Left" Margin="225,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Exit" HorizontalAlignment="Left" Margin="690,15,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.2,-0.55">
                <Button.Command>
                    <cmd:CloseAppCommand/>
                </Button.Command>
            </Button>
        </Grid>
    </DockPanel>
        
 </Window>
