<Window x:Name="AuthorizationWindow1" x:Class="VK.ITMO.EXAM.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cmd="clr-namespace:VK.ITMO.EXAM.Commands"
        xmlns:vm="clr-namespace:VK.ITMO.EXAM.ViewModels"
        xmlns:local="clr-namespace:VK.ITMO.EXAM.Views"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="237" Width="274">
    <Window.DataContext>
        <vm:AuthorizationWindowViewModel/>
    </Window.DataContext>
    <Grid Margin="0,0,473,37">
        <Label Content="UserName" HorizontalAlignment="Left" Margin="20,11,-120,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="20,42,-120,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="23" Margin="95,14,-220,0" TextWrapping="Wrap" Text="{Binding UserName}" VerticalAlignment="Top" Width="125"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="23" Margin="95,46,-220,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="125" RenderTransformOrigin="0.32,1"/>
        <CheckBox x:Name="cbWinAuthorization" Content="Windows Authorization" HorizontalAlignment="Left" Margin="25,100,-170,0" VerticalAlignment="Top" Width="145" Checked="cbWinAuthorization_Checked" Unchecked="cbWinAuthorization_Unchecked" IsChecked="{Binding AuthorizationWindows}"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="25,145,-105,-21" VerticalAlignment="Top" Width="80" Height="25" Command="{Binding ConnectCommand}"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="135,145,-215,-21" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.562,1.25" Height="25">
            <Button.Command>
                <cmd:CloseAppCommand/>
            </Button.Command>
        </Button>
    </Grid>
</Window>
